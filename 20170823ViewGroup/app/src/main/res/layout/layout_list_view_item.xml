<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="点击 TAG 可触发 ListView 的点击事件"/>

    <com.hw.a20170823viewgroup.HWTagContainerLayout
        android:id="@+id/tag_view"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:horizontal_interval="10dp"
        app:tag_corner_radius="12dp"
        app:tag_theme="none"
        app:tag_text_size="15sp"
        app:tag_horizontal_padding="10dp"
        app:tag_vertical_padding="5dp"
        app:container_border_color="@android:color/transparent"
        app:container_background_color="@android:color/transparent">

    </com.hw.a20170823viewgroup.HWTagContainerLayout>
    
</LinearLayout>
